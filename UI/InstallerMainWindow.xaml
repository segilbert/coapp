<Window x:Class="CoApp.Toolkit.UI.InstallerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Installer" Width="700" Height="400" x:Name="win"
        Background="Transparent" AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" Loaded="win_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
                <ResourceDictionary>
                    <Storyboard x:Key="hideInstall" Name="HideInstall" >
                        <DoubleAnimation 
                Storyboard.TargetName="InstallButton" 
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0:.75" />
                    </Storyboard>
                    <Storyboard x:Key="hideCheckbox" >
                        <DoubleAnimation 
                Storyboard.TargetName="UpgradeToLatestVersion" 
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0:0.5" />
                    </Storyboard>
                    <Storyboard x:Key="showProgress" >
                        <DoubleAnimation 
                Storyboard.TargetName="InstallationProgress" 
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0:.75" />
                    </Storyboard>
                    <Storyboard x:Key="hideWindow" >
                        <DoubleAnimation 
                Storyboard.TargetName="win" 
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0:.75" />
                    </Storyboard>
                    <Storyboard x:Key="slideTrans" Name="SlideStoryboard" >
                        <DoubleAnimationUsingKeyFrames Duration="0:0:1.6" Storyboard.TargetName="CancelButton" Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.X)" >
                            <EasingDoubleKeyFrame Value="0" KeyTime="00:00:00">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <SineEase EasingMode="EaseInOut"/>
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                            <EasingDoubleKeyFrame Value="120" KeyTime="00:00:01.6">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <SineEase EasingMode="EaseInOut"/>
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>



